<Window x:Class="MindControl.Samples.SrDemoWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MindControl.Samples.SrDemoWpfApp"
        mc:Ignorable="d"
        Title="Slime Rancher Demo MindControl WPF App" Height="265" Width="560" ResizeMode="NoResize">
    <StackPanel Margin="10 5">
        <TextBlock Text="This application is a demo for the MindControl library." TextWrapping="Wrap" Margin="0 0 0 5" />
        <TextBlock Text="Start the free Slime Rancher demo to see and edit the game state." TextWrapping="Wrap" Margin="0 0 0 5" />
        <TextBlock Text="Slime Rancher belongs to Monomi Park. They are not responsible for this software." TextWrapping="Wrap" Margin="0 0 0 5" />
        
        <GroupBox Header="Game state" Padding="5" HorizontalAlignment="Left">
            <local:GameStateView DataContext="{Binding GameStateVm}" />
        </GroupBox>
    </StackPanel>
</Window>
